{
  "clearMocks": true,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**"
  ],
  "coverageReporters": [
    "json-summary",
    "text",
    "lcov"
  ],
  "moduleFileExtensions": [
    "js",
    "ts"
  ],
  "modulePaths": [
    "<rootDir>",
    "<rootDir>/src/"
  ],
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": [
    "**/test/**/*.test.ts"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "verbose": true
}
