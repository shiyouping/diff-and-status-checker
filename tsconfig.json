{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "newLine": "lf",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDirs": [
      "./src"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": [
    "./.github",
    "./badges",
    "./coverage",
    "./dist",
    "./node_modules",
    "./script",
    "*.json"
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
